<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qb.app.controllers.Cashier_top_panelController">
   <children>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="800.0" styleClass="primary-gradient-toLeft" stylesheets="@../css/style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <BorderPane fx:id="iconMenu" maxHeight="-Infinity" maxWidth="-Infinity" onMouseClicked="#toggleMenu" styleClass="titleBarIcon" stylesheets="@../css/style.css">
               <center>
                  <Group styleClass="titleBarIcon" stylesheets="@../css/style.css" />
               </center>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </BorderPane>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Label fx:id="panelTitle" styleClass="primary-white" stylesheets="@../css/style.css" text="Title Here...">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <BorderPane fx:id="iconMinimize" maxHeight="-Infinity" maxWidth="-Infinity" onMouseClicked="#titleBarActionHandler" styleClass="titleBarIcon" stylesheets="@../css/style.css">
                     <center>
                        <Group styleClass="titleBarIcon" stylesheets="@../css/style.css" />
                     </center>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </BorderPane>
                  <BorderPane fx:id="iconClose" maxHeight="-Infinity" maxWidth="-Infinity" onMouseClicked="#titleBarActionHandler" styleClass="titleBarIcon" stylesheets="@../css/style.css">
                     <center>
                        <Group styleClass="titleBarIcon" stylesheets="@../css/style.css" />
                     </center>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </BorderPane>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
